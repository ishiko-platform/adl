ishikopath = envvar("ISHIKO");
import $(ishikopath)/ThirdPartyGlue/Include/Ishiko/yaml-cpp.bkl;

setting ISHIKO_PLATFORM_ADL_ROOT
{
    help = "Path to the Ishiko Platform ADL installation";
    default = '$(ISHIKO_PLATFORM)/ADL';
}

template IshikoADL : yaml-cpp
{
    includedirs += $(ISHIKO_PLATFORM_ADL_ROOT)/Include/Cpp;

    libdirs += $(ISHIKO_PLATFORM_ADL_ROOT)/Lib/$(arch);
}
