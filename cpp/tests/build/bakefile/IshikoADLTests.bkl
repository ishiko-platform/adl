ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/tests/include/Ishiko/Tests.bkl;

toolsets = vs2017;

vs2017.solutionfile = ../vc15/IshikoADLTests.sln;

program IshikoADLTests : IshikoADL, IshikoTests
