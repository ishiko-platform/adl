toolsets = vs2017;

vs2017.solutionfile = ../VC15/IshikoADL.sln;

library IshikoADL
{
    archs = x86_64;

    includedirs += ../../../Include/Ishiko/Platform/ADL/Cpp;

    outputdir = ../../../Lib/$(arch);

    if ($(config) == Debug)
    {
        basename = IshikoADL-d;
    }

    headers
    {
        ../../../Include/Ishiko/Platform/wxWidgetsEngine/CLIExtension/linkoptions.h
    }
}
